{
  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2015",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin"
  ]
}
